<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.view.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="name" />
                <field name="postcode" />
                <field name="bedrooms" />
                <field name="living_area" />
                <field name="expected_price" />
                <field name="selling_price" />
                <field name="date_availability" />
            </tree>
        </field>
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.view.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" class="field_name" placeholder="Subject..." />
                        </h1>
                    </div>
                    <field name="estate_tag" widget="many2many_tags" />
                    <group>
                        <group>
                            <field name="estate_type" />
                            <field name="postcode" />
                            <field name="date_availability" />
                            <field name="state" />

                        </group>
                        <group>
                            <field name="expected_price" />
                            <field name="selling_price" />
                            <field name="bet_offer" />
                            <!-- <field name="active" widget="boolean_toggle" /> -->
                        </group>
                    </group>

                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description" />
                                <field name="bedrooms" />
                                <field name="living_area" />
                                <field name="facades" />
                                <field name="garden" widget="boolean_toggle" />
                                <field name="garage" widget="boolean_toggle" />
                                <field name="garden_area" />
                                <field name="garden_orientation" />
                                <field name="total_area" />
                            </group>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="user_id" />
                                <field name="partner_id" />
                            </group>
                        </page>
                        <page string="Offer">
                            <field name="estate_offer" widget='one2many'>
                                <tree string="">
                                    <field name="price" />
                                    <field name="validity" />
                                    <field name="date_deadline" />
                                    <field name="partner_id" />
                                    <field name="state" />
                                    <!-- <field name="property_id" /> -->
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.view.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="">
                <field name="name" />
                <field name="postcode" />
                <field name="expected_price" />
                <field name="bedrooms" />
                <field name="living_area" />
                <field name="facades" />
                <group expand='0' string='Filters'>
                    <separator />
                    <filter name="state_new" string="New" domain="[('state', '=',  'new')]" />
                    <filter name="state_old" string="Old" domain="[('state', '=',  'old')]" />
                    <!-- <filter name="internship_filter" string="professional practice" domain="[('type_of_internship', '=',  'professional practice')]" /> -->
                </group>

                <group expand='0' string='Group by...'>
                    <filter string='Bedrooms' name="bedrooms" context="{'group_by': 'bedrooms'}" />
                    <filter string='Status' name="state" context="{'group_by': 'state'}" />
                </group>

            </search>
        </field>
    </record>

    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Property</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form,search</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <!-- <field name="help" type="html">
            
        </field> -->
    </record>

    <menuitem id="estate_property_menu" name="Propertes" action="estate_property_action" parent="advertisement_menu" sequence="10" />
</odoo>